{
	"cpu": 1,
    "memory": 4096,
	"env": {
		"LIFERAY_ROUTES_CLIENT_EXTENSION": "/etc/liferay/lxc/ext-init-metadata",
		"LIFERAY_ROUTES_DXP": "/etc/liferay/lxc/dxp-metadata"
	},
	"environments": {
		"infra": {
			"deploy": false
		}
	},
	"id": "cmschat",
	"kind": "Deployment",
	"livenessProbe": {
		"httpGet": {
			"path": "/ready",
			"port": 58081
		},
      "initialDelaySeconds": 100,
      "periodSeconds": 10,
      "timeoutSeconds": 4,
      "failureThreshold": 3,
      "successThreshold": 1
	},
	"loadBalancer": {
		"targetPort": 58081
	},
	"readinessProbe": {
		"httpGet": {
			"path": "/ready",
			"port": 58081
		},
      "initialDelaySeconds": 120,
      "periodSeconds": 10,
      "timeoutSeconds": 4,
      "failureThreshold": 3,
      "successThreshold": 1
	},
	"scale": 1
}